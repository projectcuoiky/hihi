<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.m.MainActivity" >

  <EditText
      android:id="@+id/edittexttendangnhap"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:hint="Email"
      />
  <EditText 
       android:id="@+id/edittextmatkhau"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/edittexttendangnhap"
      android:layout_centerHorizontal="true"
      android:hint="Mật Khẩu"
      />
     
 <Button
     android:id="@+id/buttondangnhap"
     android:layout_width="200dp"
     android:layout_height="wrap_content" 
     android:layout_centerHorizontal="true"
     android:layout_below="@+id/edittextmatkhau"
     android:text="Đăng Nhập"
     
     />
 <Button
     android:id="@+id/buttontao"
     android:layout_width="200dp"
     android:layout_height="wrap_content" 
     android:layout_centerHorizontal="true"
     android:layout_below="@+id/buttondangnhap"
     android:text="Tạo Tài Khoản"
     
     />
 

 <ImageView
     android:id="@+id/imageview"
     android:layout_width="match_parent" 
     android:layout_height="match_parent"
     android:layout_alignParentBottom="true"
     android:layout_centerHorizontal="true"
     android:scaleType="fitCenter"
     />
</RelativeLayout>
